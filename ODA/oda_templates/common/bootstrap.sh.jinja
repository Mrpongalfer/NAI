       CURRENT_NODE_MAJOR=$(echo $CURRENT_NODE_VER | cut -d. -f1)
       REQ_NODE_MAJOR=$(echo $NODE_VERSION_REQ | cut -d. -f1)
       if [[ "$CURRENT_NODE_MAJOR" -lt "$REQ_NODE_MAJOR" ]]; then
